{
	"presets": ["@babel/preset-env", "@babel/preset-typescript"],
	"plugins": [
		[
			"module-resolver",
			{
				"alias": {
					"@modules": "./src/modules",
					"@config": "./src/config",
					"@shared": "./src/shared"
				}
			}
		],
		["@babel/plugin-proposal-decorators", { "legacy": true }],
		"babel-plugin-parameter-decorator",
		"babel-plugin-transform-typescript-metadata"
	]
}
